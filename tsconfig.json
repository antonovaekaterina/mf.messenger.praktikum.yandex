{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "es2017",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "types": [
      "jest"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*", "public/**/*", "dist/**/*", "jest/*"],
  "files": [
    "global.d.ts"
  ]
}