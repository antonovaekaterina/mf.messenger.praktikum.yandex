{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "es2017",
    "module": "ES6"
  },
  "include": [
    "static/components/**/*",
    "static/pages/**/*",
    "static/utils/*"
  ],
  "files": [
    "global.d.ts"
  ]
}